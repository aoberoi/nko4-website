@import "2013/_common"

body
  .form-page

    .errors
      background: darkred
      color: #fff
      text-shadow: 0 0 5px #000
      padding: 10px
      list-style: none
      border-radius: 3px

    ol#members
      padding-left: 0
      li
        margin: 5px 0

      .avatar
        margin-right: 5px
      .remove-btn
        padding-bottom: 5px
        padding-top: 0px
        font-size: 15px
        margin-left: 5px
    .delete-confirm
      height: 0
      overflow: hidden

    .spinner
      display: none

    .actions
      margin-top: 10px