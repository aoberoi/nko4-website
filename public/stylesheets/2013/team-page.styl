@import "2013/_common"

body
  .team-page
    .header-box
      border-bottom: 1px solid #E4E4E4
      padding-bottom: 15px
      margin-bottom: 15px
      padding-top: 10px
      .location
        font-weight: normal
        font-size: 18px
      h1
        margin-top: 5px
        margin-bottom: 0
      h2
        margin-top: 3px
    p.accept
      text-align center
      margin auto
      float none


    .team-content
      h2
        font-size: 14px
        font-weight: bold
        color: #333

    .people
      margin-top: 20px
      list-style: none
      padding: 0
      .avatar
        margin-right: 10px
      li
        margin-bottom: 10px
        a
          background #ca3c48
          color #fff
          padding 3px 6px
          border-radius 2px
          font-size 14px
          &:hover
            text-decoration none
            transition .3s
            background #A6293E
