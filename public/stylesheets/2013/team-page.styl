@import "2013/_common"

body
  .team-page
    .well
      margin-bottom: 6px
    .header-box
      border-bottom: 1px solid #E4E4E4
      padding-bottom: 15px
      margin-bottom: 15px
      padding-top: 10px
      .location
        font-weight: normal
        font-size: 18px
        margin-top: 5px
      h1
        margin-top: 5px
        margin-bottom: 0
        font-weight: normal
      h2
        margin-top: 3px
      .edit
        text-align: right

      .team-stats
        list-style: none
        text-align: right
        float: right
        margin: 0
        padding: 0
        li
          display: inline-block
          white-space: nowrap
          font-size: 16px
          color: #7E7E7E
          padding: 0 5px
          text-transform: lowercase
          .count
            font-size: 20px
            color: #363636
            font-weight: bold
            margin-right: -2px
            display: inline-block
            vertical-align: -2px

    p.accept
      text-align center
      margin auto
      float none

    .team-content
      h2
        font-size: 14px
        font-weight: bold
        color: #333
        margin-bottom: 10px
      .content-section
        margin-bottom: 20px
      .actions
        text-align: center

    .people
      margin-top: 10px
      list-style: none
      padding: 0
      .avatar
        margin-right: 10px
      li
        margin-bottom: 10px
        a
          background #ca3c48
          color #fff
          padding 3px 6px
          border-radius 2px
          font-size 14px
          &:hover
            text-decoration none
            transition .3s
            background #A6293E
