@import "2013/_common"

body
  #header
    .header
      background: black
      box-shadow: 2px 2px 0 #DFDFDF
      .header-inner
        min-height: 441px
        background: black url('/images/2013/gloves-bg.jpg') no-repeat center center
        position: relative

      .logo
        background: transparent url('/images/2013/logo.png') no-repeat center center
        width: 175px
        height: 95px
        text-indent: -9999px
        display: block
        position: absolute
        left: 10px
        top: 28px
        z-index: 100

      .logo-sm
        background: transparent url('/images/2013/logo-sm.png') no-repeat center center
        width: 228px
        height: 48px
        text-indent: -9999px
        display: block
        position: absolute
        right: -14px
        top: 372px
        z-index: 100

    .navbar-header
      position: absolute
      right: 10px
      top: 0

    .nav-wrapper
      text-align: center
      padding: 10px 0
      nav, .nav-inner
        background: none
        .col
          position: static

      a
        display: inline-block
        margin: 2px 10px
        padding: 5px 0px
        font-family: franklin
        font-weight: bold
        text-transform: uppercase
        font-size: 14px
        letter-spacing: 1px

        color: #ccc
        &:hover
          color: #fff
          text-decoration: none


    &.affix-top
      nav, .navbar-nav
        float: none !important
        text-align: center
      ul, li
        display: inline-block
      .nav-wrapper
        padding-top: 8px
        padding-bottom: 0
        a
          padding: 5px 5px
      .navbar-header
        position: absolute
        right: 10px
        top: 22px

    &.affix
      position: static
      .affix-inner
        position: fixed
        left: 0
        right: 0
        top: 0
        height: 72px
        z-index: 30
        box-shadow: 0 0 9px #333
        .header
          height: 72px
          overflow: hidden
          opacity: 0.9
          .container
            position: relative
        .logo
          top: 5px !important
          left: 10px !important
          right: auto !important
          width: 112px !important
          height: 61px !important
          background-size: 100% 100% !important
          z-index: 100
          position: absolute
        .logo-sm
          display: none !important
        .gloves
          width: 190px
          height: 99px
          background: url('/images/2013/gloves-bg.jpg') no-repeat center center
          background-size: 100% 100%
          opacity: 0.5
          position: absolute
          left: -27px
          top: -10px
          z-index: 10
        .header-inner
          background: #000 !important
        .nav-wrapper
          position: absolute
          top: 10px
          right: -20px
          text-align: right


      .affix-placeholder
        height: 495px
      &.header-mini .affix-placeholder
        height: 72px

  @media (max-width: 767px)
    #header
      .nav-wrapper
        padding: 0 !important
        nav
          border-top: 0px
          border-bottom: 0px
          li
            display: block
      .header
        .header-inner
          min-height: 0
          height: 147px
          background-size: 80%
          background-position: center center
        .logo-sm
          display: none
      &.affix .nav-wrapper nav
        background: #000
        text-align: center
        left: 0
        right: 0
        top: 62px
        position: absolute
        float: none !important

