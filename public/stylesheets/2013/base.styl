@import "2013/_common"

body
  background: #fff

  a
    color: #A62B47

  // set all the fonts to franklin
  font-family: franklin
  h1,h2,h3,h4,h5,h6,p
    font-family: franklin

  .btn.btn-primary
    background: #A33247
    border-color: #AF4E60
    border-radius: 0px

  .btn-super
    text-transform: uppercase
    font-weight: bold
    font-size: 20px
    padding: 22px 25px
    letter-spacing: 1px

  hr
    border-top: 1px solid #E2E1E2

  .clear
    clear: both

  .person-col
    text-align: center
    padding: 15px

  .person
    text-align: left
    .avatar
      background: #F7F7F7
      background-size: cover
      background-position: center center
      border: 1px solid #C0C0C0
      img
        width: 100%
    label
      display: block
      text-transform: uppercase
      color: #4B4B4B
      font-weight: normal
      font-size: 12px
      letter-spacing: 1px
      margin-top: 8px
      cursor: pointer
      margin-bottom: 3px
      line-height: 1.3
    a
      text-decoration: none
      cursor: pointer


    ul.links
      list-style: none
      margin: 0
      padding: 1px
      li
        margin: 0
        padding: 0
        display: inline-block

  i.icon-linkedin
    icon('linkedin', 18px, 18px)
  i.icon-twitter
    icon('twitter', 18px, 18px)
  i.icon-email
    icon('email', 18px, 18px)
