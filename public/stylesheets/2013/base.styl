body
  background: #fff

  // lets anchor tags work despite the affixed header, note this only work
  // on divs that display block and don't otherwise have margin/padding
  // see: https://github.com/nko4/website/blob/master/views/index/sponsors.jade#L19
  .anchorable
    margin-top -80px
    padding-top 80px

  a
    color: #A62B47

  // set all the fonts to franklin
  font-family: franklin
  h1,h2,h3,h4,h5,h6,p
    font-family: franklin

  h2
    font-size: 22px

  p
    color: #606060

  .content-block
    max-width: 600px

  .btn.btn-primary
    background: #A33247
    border-color: #AF4E60
    border-radius: 2px
    transition: .5s
    &:hover
      background: #7A2635
      transition: .5s


  .btn-super
    text-transform: uppercase
    font-weight: bold
    font-size: 20px
    padding: 22px 25px
    letter-spacing: 1px
    i
      display: block
      font-size: 12px
      font-weight: normal

  hr
    border-top: 1px solid #E2E1E2

  .clear
    clear: both

  .person-col
    text-align: center
    padding: 15px

  .person
    text-align: left
    .avatar
      background: #F7F7F7
      background-size: cover
      background-position: center center
      border: 1px solid #C0C0C0
      img
        width: 100%
    label
      display: block
      text-transform: uppercase
      color: #4B4B4B
      font-weight: normal
      font-size: 12px
      letter-spacing: 1px
      margin-top: 8px
      cursor: pointer
      margin-bottom: 3px
      line-height: 1.3
    a
      text-decoration: none
      cursor: pointer


    ul.links
      list-style: none
      margin: 0
      padding: 1px
      li
        margin: 0
        margin-right: 4px
        padding: 0
        display: inline-block

  i.icon-linkedin
    icon('linkedin', 18px, 18px)
  i.icon-twitter
    icon('twitter', 18px, 18px)
  i.icon-email
    icon('email', 18px, 18px)

  pre
    overflow auto
    > code
      word-wrap normal
      white-space pre
