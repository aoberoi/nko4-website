body
  .connect
    background: #F4F4F4
    border-top: 1px solid #DFDFDF

    h3
      color: #4B4B4B
      a
        color: #547BA4
        font-size: 13px
        margin-left: 15px

    #tumblr-posts
      max-height: 390px
      overflow: auto
      margin-top: -5px
      ul, li
        list-style: none
        margin: 0
        padding: 0
      li
        border-bottom: 1px dotted #AFAFAF
        padding: 5px 0
        margin-right: 10px
        a
          color: #4B4B4B
          font-weight: bold
          font-size: 13px
          white-space: nowrap
          display: block
          overflow: hidden
          text-overflow: ellipsis
