@import "2013/_common"

.teams-page
  form.search
    display inline-block
    margin-left 1em
    input
      width 16em
  ul.teams
    overflow hidden
    > li
      clear both
      border-top solid 1px hsla(0, 0%, 100%, 0.9)
      border-bottom solid 1px hsla(0, 0%, 50%, 0.1)
      overflow hidden
      padding 20px 0 10px
      &:first-child
        border-top-color transparent
      h3
        float left
        margin 0
      div.members, .location, .description
        font-size small
      div.members
        float right
        text-align right
        margin -3px 0 0
      ul.members
        margin 0
        li
          display inline-block
          margin-left 5px
        li.invites
          color hsla(0, 0%, 0%, 0.6)
          font-size x-small
          font-style italic
          margin-right 10px
        img.avatar
          margin 0
      .location
        clear left
        font-style italic
      .description
        p, ul
          margin 0.5em 0
        img
          display none
        h1
          font-size 1.5em
  .more, #infscr-loading
    text-align center
    padding-top 1em


  &.entries
    form.search
      display inline-block
      margin-left 1em
      input
        width 16em
    span.all
      margin-left 1em
    ul.sorts
      font-size small
      text-align center
      li
        display inline
        margin-right 1ex
        &.current
          inverted()
          padding 2px 5px
          a
            color white
    ul.teams
      overflow hidden
      margin 0
      > li
        box-shadow inset 0 0 5px hsla(0, 0%, 0%, 0.1)
        background-color hsl(0, 0%, 95%)
        background-color hsla(0, 0%, 95%, 0.5)
        padding 10px
        border-radius 2px
        margin-bottom 1em
        padding 20px
        position relative
        h2, h3, h4, .description
          margin-left 174px
        h2, h3, h4
          margin-top 0px
        h2
          margin-right 100px
        img.screenshot
          width 160px
          height 93px
          float left
          margin-left -5px
          margin-right 10px
          border solid 2px hsl(0, 0%, 90%)
          border solid 2px hsla(0, 0%, 0%, 0.1)
          border-radius 2px
        .description p
          margin-bottom 0
          font-size small
        .clear
          clear both
        .score
          position absolute
          top -2px
          right 10px
          inverted()
          padding 10px 7px 6px 10px
          text-align center
          a
            color white
          h3
            margin 0
          .dimension
            font-size x-small
            line-height 100%
    .more, #infscr-loading
      text-align center
      padding-top 1em

