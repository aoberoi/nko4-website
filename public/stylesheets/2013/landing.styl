@import "2013/_common"

body

  .landing-section
    padding: 38px 0
    h3
      font-size: 14px
      font-weight: bold
      letter-spacing: 1px
      text-transform: uppercase
      color: #4B4B4B
      margin-top: 0
      margin-bottom: 25px
    hr
      margin: 0
      margin-bottom: 15px
    &.row > hr
      margin-left: 15px
      margin-right: 15px

  .main-section
    text-align: center
    label
      font-weight: bold
      text-transform: uppercase
      color: #921E36
      letter-spacing: 1px
      font-size: 17px
      margin: 0

    h2
      margin: 0
      margin-bottom: 23px
      font-weight: bold
      font-size: 53px
      .sep
        color: #CDCDCD
        display: inline-block
        margin: 0 12px

    .btn-super
      min-width: 300px

  .intro-section
    p.about
      font-size: 33px
      color: #838383
      line-height: 1.3
      font-weight: 300

    .nko-dates
      background: #F6F6F6
      padding: 20px
      text-transform: uppercase
      font-weight: bold
      margin-top: -20px
      border-radius: 5px
      h4
        font-size: 11px
        font-weight: bold
        color: #4B4B4B
      .date-row
        color: #7F7F7F
        font-size: 11px
        clear: both
        border-bottom: 1px dotted #919191
        min-height: 12px
        letter-spacing: 1px
        margin-bottom: 10px
        .date-label
          float: left
          background: #F6F6F6
          padding-right: 5px
        .date-date
          float: right
          background: #F6F6F6
          padding-left: 5px

  .sponsors-section
    p
      text-align: center
      margin-top: 35px
      margin-bottom: 45px
    .sponsor-grid
      margin-top: 30px
      text-align: center
      .col
        border-right: 1px solid #E2E2E2
        border-bottom: 1px solid #E2E2E2
        min-height: 125px
        position: relative
        opacity: 0.6
        background-repeat: no-repeat
        background-size: 100%
        background-position: center center
        &:hover
          opacity: 1.0

      .col:last-child
        border-right: 1px solid transparent
      .row:last-child .col
          border-bottom: 1px solid transparent

  .judges-section
    .nominate-msg
      float: right
      max-width: 300px
      color: #8E8E8E
      font-size: 14px
      font-weight: 300
      line-height: 1.3
      text-align: right
      a
        color: #8E8E8E
        text-decoration: underline

  .about-section
    h3
      margin-bottom: 10px

  .press-section
    p
      padding-top: 15px
    .btn-lg
      font-size: 13px
      text-transform: uppercase
      font-weight: bold
      margin-right: 8px
      min-width: 138px
      padding: 20px
      margin-bottom: 5px
      letter-spacing: 1px

    .download
      margin-top: 20px
      .poster-thumbnail
        border: 1px solid #A65E6D
        background: #8E1F35 url('/images/2013/poster.jpg') no-repeat center center
        background-size: cover
        float: left
        width: 138px
        height: 184px
        margin-right: 8px
        margin-bottom: 0px

      .btn-md
        font-size: 13px
        background: #FC3F65
        border: 1px solid #FD98AC
        text-transform: uppercase
        width: 138px
        text-align: center

      .download-step
        float: left
        max-width: 150px
        color: #9E9E9E
        font-weight: 300
        line-height: 1.3
        padding-top: 10px
        margin-bottom: 0px
        strong
          display: block
          font-weight: 300
          color: #303030


