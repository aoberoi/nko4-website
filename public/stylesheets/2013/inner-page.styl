@import "2013/_common"

body
  .inner-page
    padding-top: 20px
    background: #fff
    h1, h2, h3, h4, h5, h6
      font-weight: bold
    
    max-width: 900px
    margin: auto
    p
      font-size: 18px
      line-height: 1.4

    .sponsors-sidebar
      background: #F4F4F4
      border-radius: 3px
      padding: 15px 20px
      padding-bottom: 0
      margin-top: 20px
      h3
        font-size: 12px
        font-weight: bold
        text-transform: uppercase
        color: #3F4040
        border-bottom: 2px solid #EAEAEA
        padding-bottom: 10px
        margin-bottom: 20px
        margin-top: 0
        line-height: 1.5
        text-align: center

      .sponsor
        position: relative
        background-repeat: no-repeat
        background-size: 100%
        background-position: center center
        margin-bottom: 30px
        clear: both
        img
          width: 100%
          display: block
        .img-content
          width: 100%
          height: 100%
          position: absolute
          left: 0
          top: 0
          
        &:hover
          opacity: 1.0

    .sponsors-platinum, .sponsors-other
      h2, p
        margin-left: 180px
    .sponsors-platinum
      img
        float: left
        margin-right: 30px

    .sponsors-other
      img
        float: left
        margin-right: 30px
        margin-left: 15px

    .sponsors
      list-style: none
      margin: 0
      padding: 20px 0       
      li
        border-top: 1px solid #eee
        margin-top: -1px
        border-bottom: 1px solid #eee
        padding: 25px 0
        clear: both
        line-height: 1.0
        img
          float: left
          margin-right: 30px

        .sponsor-description
          font-size: 14px
          margin-left: 360px
    
    .sponsors-btn
      float: right
      margin-left: 30px
      margin-top: 20px
      text-transform: uppercase