ul.sponsors
  - _.shuffle(sponsors).forEach(function(sponsor) {
    - if (!sponsor.description) return;
    li
      a( href=sponsor.url )
        img( src='/images/sponsors/' + sponsor.image, class=sponsor.image.replace(/\.\w+$/, '') )
      != markdown(sponsor.description)
  - });

